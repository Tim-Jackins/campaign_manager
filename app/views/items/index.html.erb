<h1 class="mt-5">Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Cost</th>
    </tr>
  </thead>

  <% @items.each do |item| %>
  <tr>
    <td><%= link_to item.name, item_path(item) %></td>
    <td><%= item.item_category %></td>
    <td><%= item.cost %></td>
  </tr>
  <% end %>
</table>
