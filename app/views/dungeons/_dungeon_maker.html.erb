<%= form_with model: @dungeon, id: 'dungeon_update_form', url: campaign_dungeon_path(@campaign, @dungeon), local: true, method: :patch do |form| %>
<%= form.hidden_field :rooms %>

<% if @dungeon.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@dungeon.errors.count, "error") %> prohibited
    this dungeon from being saved:
  </h2>
  <ul>
    <% @dungeon.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
</div>

<div class="card mb-3">
  <h5 class="card-header">New Room</h5>
  <div class="card-body">

  <form id="new_room">
    <div class="form-group">
      <label for="room_name">Name</label>
      <input type="text" class="form-control" id="room_name">
    </div>

    <div class="form-group">
      <label for="room_environment">Environment</label>
      <input type="text" class="form-control" id="room_environment">
    </div>

    <div class="form-group">
      <label for="room_notes">Notes</label>
      <textarea class="form-control" id="room_notes" rows="3"></textarea>
    </div>

    <div class="form-group row">
      <label for="room_creature" class="col-sm-2 col-form-label">Creatures:</label>
      <div class="col-sm-10">
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="room_creature">
          <div class="input-group-append">
            <button class="btn btn-primary" id="room_creature_add">Add</button>
          </div>
        </div>
      </div>
    </div>

    <ul class="list-group mb-3" id="creature_holder"></ul>

    <div class="form-group row">
      <label for="room_item" class="col-sm-2 col-form-label">Items:</label>
      <div class="col-sm-10">
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="room_item">
          <div class="input-group-append">
            <button class="btn btn-primary" id="room_item_add">Add</button>
          </div>
        </div>
      </div>
    </div>

    <ul class="list-group mb-3" id="item_holder"></ul>

  </form>

  <button class="btn btn-primary" id="create_room">Create Room</button>

  <div class="my-3 p-3 bg-white rounded shadow-sm" id="rooms_holder">
    <h6 class="border-bottom border-gray pb-2 mb-0">Rooms</h6>

  </div>

  <%= form.submit class: 'btn btn-primary' %>
</div>

<% end %>

<%= javascript_pack_tag 'new_dungeon', 'data-turbolinks-track': 'reload' %>
