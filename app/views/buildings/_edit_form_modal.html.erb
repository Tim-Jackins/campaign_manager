<div class="modal fade" id="edit_building_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(url: '', model: @new_building, id: 'edit_building_modal_form', local: true) do |form| %>
      <input type="hidden" name="_method" value="patch">
      <div class="modal-header">
        <h5 class="modal-title">Edit Building</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <p>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= form.label :description %><br>
            <%= form.text_area :description, class: 'w-75' %>
          </p>
        </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit 'Save Building', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
