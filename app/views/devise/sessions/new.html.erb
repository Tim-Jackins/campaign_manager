
<div class="sign-in-page">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
 
  <div class="text-center mb-4">
    <img class="mb-4" src=<%= asset_path('dnd_logo.png') %> alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Login</h1>
    <p>Login with your email / username and password. If not <%= link_to 'return to home', '/' %>.</p>
  </div>

  <div class="form-label-group">
    <%= f.text_field :login,
                     class: 'form-control',
                     placeholder: 'Email address',
                     required: '',
                     autofocus: true,
                     style: 'background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;',
                     autocomplete: 'email' %>
    <%= f.label 'Email or Username' %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password,
                         class: 'form-control',
                         placeholder: 'Password',
                         required: '',
                         style: 'background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;',
                         autocomplete: "current-password" %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group">
  <%= render "devise/shared/links" %>
  </div>

  <div class="actions">
    <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
  </div>

<% end %>

</div>
