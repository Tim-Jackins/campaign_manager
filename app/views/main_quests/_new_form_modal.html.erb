<div class="modal fade" id="new_main_quest_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: [ @campaign, @campaign.main_quests.build ], local: true) do |form| %>
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Main Quest</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <p>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= form.label :short_description %><br>
            <%= form.text_field :short_description, class: 'w-75' %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= form.label :description %><br>
            <%= form.text_area :description, class: 'w-75' %>
          </p>
        </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
